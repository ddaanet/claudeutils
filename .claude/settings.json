{
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(wc:*)",
      "Bash(claudeutils:*)",
      "Bash(just:*)",
      "Bash(pytest:*)",
      "Bash(ruff:*)",
      "Bash(mypy:*)",
      "Bash(docformatter:*)",
      "Bash(pbcopy:*)",
      "Bash(npm install:*)",
      "Bash(npm ci:*)",
      "Bash(npm ls:*)",
      "Bash(agent-core/bin/prepare-runbook.py:*)",
      "Skill",
      "WebSearch"
    ],
    "deny": [
      "NotebookEdit",
      "Edit(/tmp/*)",
      "Write(/tmp/*)",
      "Bash(git push:*)",
      "Bash(just release:*)",
      "WebFetch(domain:http-intake.logs.*.datadoghq.com)"
    ]
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "plansDirectory": "plans/claude/",
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": ["git", "agent-core/bin/prepare-runbook.py"]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.claude/hooks/pretooluse-block-tmp.sh"
          },
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.claude/hooks/pretooluse-symlink-redirect.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $CLAUDE_PROJECT_DIR/.claude/hooks/submodule-safety.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $CLAUDE_PROJECT_DIR/.claude/hooks/submodule-safety.py"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 $CLAUDE_PROJECT_DIR/agent-core/hooks/userpromptsubmit-shortcuts.py",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
