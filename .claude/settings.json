{
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(wc:*)",
      "Bash(claudeutils:*)",
      "Bash(just:*)",
      "Bash(pytest:*)",
      "Bash(ruff:*)",
      "Bash(mypy:*)",
      "Bash(docformatter:*)",
      "Skill",
      "WebSearch"
    ],
    "deny": [
      "NotebookEdit",
      "Bash(git push:*)",
      "Bash(just release:*)"
    ]
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "plansDirectory": "plans/",
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": ["git"]
  }
}
