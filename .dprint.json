{
  "markdown": {
    "lineWidth": 88,
    "textWrap": "always",
    "emphasisKind": "asterisks"
  },
  "excludes": [
    "session.md",
    "plans/markdown/debug/",
    "agents/role-*.md",
    "agents/rules-*.md",
    "agents/subagents/",
    "agents/modules/gen",
    "agents/modules/src/*.semantic.md",
    "agents/modules/src/sysprompt-reference/*.sysprompt.md"
  ],
  "plugins": [
    "https://plugins.dprint.dev/markdown-0.20.0.wasm"
  ]
}
